extends layout

block content
  div(class="box")
    img(class="newRestaurant" src="../images/EditRest.png")
    form(class="form" action="/edit/"+rest method="POST")
      label(class="formEntry" for="name") Name
      br
      div.separation
        input(class="input" type="text" id="name" value=restaurant.name name="name")  
      br   
      label(class="formEntry" for="location") Location
      br
      div.separation
         input(class="input" type="text" id="location" value=restaurant.location placeholder="City" name="location")
      br     
      select(class="formEntry" value=restaurant.state name="states")
        for x in state
          option(value=x selected=restaurant.state==x)=x
      
      br
      br
      select(class="formEntry" id="cuisineType" name="type")
        for cuisines in cuisine
          option(id="opt" value=cuisines)=cuisines
      br
      br
      label(class="formEntry" for="image") Image
      br
      div.separation
        input(class="input" type="text" id="Image" placeholder="Image URL" value=restaurant.image name="image")
      br
      label(for="rating") Rating
      input(type="radio" name="rating" class="radio" value="1" checked=restaurant.rating==1)
      input(type="radio" name="rating" class="radio" selected=restaurant.rating==2)
      input(type="radio" name="rating" class="radio" value="3" checked=restaurant.rating==3)
      input(type="radio" name="rating" class="radio" value="4" checked=restaurant.rating==4)
      input(type="radio" name="rating" class="radio" value="5" checked=restaurant.rating==5)
      br
      textarea(id="bio" name="bio")=restaurant.bio
      br
      button(class="button" name="cancel" value="1") Cancel
      button(class="button" name="edit" value="2") Edit
